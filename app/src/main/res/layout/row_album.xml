<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/album_cover"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/believe_album"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/LastFm.Album.Shape" />

    <TextView
        android:id="@+id/album_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/gradient_album"
        android:ellipsize="end"
        android:fontFamily="@string/ff_roboto_medium"
        android:gravity="bottom"
        android:maxLines="2"
        android:padding="8dp"
        android:textColor="@color/text_color_title_light"
        app:layout_constraintBottom_toBottomOf="@id/album_cover"
        app:layout_constraintEnd_toEndOf="@id/album_cover"
        app:layout_constraintStart_toStartOf="@id/album_cover"
        app:layout_constraintTop_toTopOf="@id/album_cover"
        tools:text="Believe whatever" />

</androidx.constraintlayout.widget.ConstraintLayout>